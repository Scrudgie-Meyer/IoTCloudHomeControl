@model WebApp.Models.LoginViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["LoginTitle"];
}

<h2>@Localizer["LoginTitle"]</h2>

<form asp-action="Login" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">@Localizer["RememberMe"]</label>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">@Localizer["LoginButton"]</button>
        <a asp-controller="Authorization" asp-action="Register" class="btn btn-outline-secondary">@Localizer["RegisterButton"]</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold">@Localizer["PageTitle"]</h1>
        <p class="lead text-muted">@Localizer["PageSubtitle"]</p>
    </div>

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h2 class="fw-semibold">@Localizer["WhatIsTitle"]</h2>
            <p class="text-muted fs-5">
                @Localizer["WhatIsDescription"]
            </p>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://i.imgur.com/C49bdec.png" class="img-fluid rounded shadow-sm" alt="Smart Home Illustration">
        </div>
    </div>

    <div class="row text-center mb-5">
        <div class="col-md-4">
            <h4>@Localizer["FeatureCloudTitle"]</h4>
            <p class="text-muted">@Localizer["FeatureCloudDescription"]</p>
        </div>
        <div class="col-md-4">
            <h4>@Localizer["FeatureSecureTitle"]</h4>
            <p class="text-muted">@Localizer["FeatureSecureDescription"]</p>
        </div>
        <div class="col-md-4">
            <h4>@Localizer["FeatureIntegrationTitle"]</h4>
            <p class="text-muted">@Localizer["FeatureIntegrationDescription"]</p>
        </div>
    </div>
</div>
